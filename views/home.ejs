<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/a18fa9a70e.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLlm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/home.css">
    <title>
        <%= title %>
    </title>
</head>

<body>

    <!-- <%- include('_header') %> -->
    <div class="header ">



        <div class="accordion">

            <div id="flip"><i class="fa-solid fa-plus">Add Project</i></div>
            <div id="panel">
                <%- include('_add_project_form') %>
            </div>


        </div>
    </div>
    <h1>Project List</h1><br/>
    <div class="container">
        
            
            <div class="card" style="width: 18rem;">




                <div class="card-body">

                    <% for(project of projects) { %>

                        <div class="card-title">

                            <div class="card-title">
                                <h1>
                                    <%= project.projectName %>
                                </h1>
                                <% if(locals.user && locals.user.id==project.user.id) {%>



                                    <%} %>
                            </div>
                            <div class="project-text">
                                <h1>
                                    Author :
                                    <%= project.auther %>
                                </h1>
                                <div class="data">
                                    <h5>
                                        Description
                                        <%= project.description %>
                                    </h5>
                                    <p>
                                        <a href="/project/open-project/<%= project._id %>"><i
                                                class="fa-solid fa-folder-open"></i>&nbsp;OPEN</a>
                                    </p>
                                    <span class="del">
                                        <a href="/project/destroy/<%= project.id %>">
                                            <i class="fa-sharp fa-solid fa-trash">&nbsp; Delete</i>
                                        </a>
                                    </span>

                                    <% if(locals.user && locals.user.id==project.user.id) {%>


                                        <%} %>

                                        <div class="blank">&nbsp;&nbsp;&nbsp;&nbsp; </div>






                                </div>
                            </div>
                        </div>

                        <% } %>

<div class="blank"></div>

                </section>

            </div>

        </div>

    </div>


    <script src="/js/add_project_dailoge.js"></script>
</body>

</html>